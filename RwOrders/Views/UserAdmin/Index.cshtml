@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Manage Users";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.FullName)</th>
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th class="text-center hidden-xs">@Html.DisplayNameFor(m => m.NumberOfVisits)</th>
            <th class="text-center hidden-xs">@Html.DisplayNameFor(m => m.LastVisit)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(Html.DisplayFor(m => item.FullName).ToHtmlString(), "Details", new { id = item.Id })</td>
                <td>@Html.DisplayFor(m => item.Email)</td>
                <td class="text-center hidden-xs">@Html.DisplayFor(m => item.NumberOfVisits)</td>
                <td class="text-center hidden-xs">@Html.DisplayFor(m => item.LastVisit)</td>
            </tr>
        }
    </tbody>
</table>
