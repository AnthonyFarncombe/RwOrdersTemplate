@model IEnumerable<EventDayViewModel>

@{
    ViewBag.Title = "Widgets Co Events";
}

<h2>@ViewBag.Title</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th class="text-center">@Html.DisplayNameFor(m => m.EventDate)</th>
            <th class="text-right">@Html.DisplayNameFor(m => m.Total)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Details", new { id = item.ID })</td>
                <td class="text-center">@Html.DisplayFor(m => item.EventDate)</td>
                <td class="text-right">@Html.DisplayFor(m => item.Total)</td>
            </tr>
        }
    </tbody>
</table>
