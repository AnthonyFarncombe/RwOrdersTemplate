@model EventDayViewModel

@{
    ViewBag.Title = "Delete Event";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this event? If you continue all associated orders will be permanently deleted!</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.CreatedBy)</dt>
        <dd>@Html.DisplayFor(m => m.CreatedBy)</dd>

        <dt>@Html.DisplayNameFor(m => m.Name)</dt>
        <dd>@Html.DisplayFor(m => m.Name)</dd>

        <dt>@Html.DisplayNameFor(m => m.EventDate)</dt>
        <dd>@Html.DisplayFor(m => m.EventDate)</dd>

        <dt>@Html.DisplayNameFor(m => m.Total)</dt>
        <dd>@Html.DisplayFor(m => m.Total)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Cancel", "Details", new { id = Model.ID })
        </div>
    }
</div>
